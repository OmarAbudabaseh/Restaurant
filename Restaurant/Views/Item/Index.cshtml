@model IEnumerable<Item>
@{
    ViewData["Title"] = "Items";
}
<div class="container">
    
    <partial name="_Notifications" />
    <div class="row">
        <div class="col-6">
            <h1>Items View</h1>
        </div>
        <div class="col-6 text-end">
            <a class="btn bg-black text-white border-5" asp-controller="Item" asp-action="New">Add New</a>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered border-5 table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="25%">
                            @item.ItemName
                        </td>
                        <td width="25%">
                            @item.Price
                        </td>
                        <td width="25%">
                            @item.Category.CategoryName
                        </td>
                        <td width="25%">
                            <a asp-action="Edit" asp-controller="Item" asp-route-Id="@item.Id" class="btn btn-light me-5 text-center">
                                <i class="bi bi-pen"></i>
                            </a>
                            <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger me-5 text-center">
                                <i class="bi bi-trash"></i>
                            </a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

