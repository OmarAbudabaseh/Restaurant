@model Category
@{
    ViewData["Title"] = "New";
}

<h1>Create New Category</h1>
<form method="post" enctype="multipart/form-data">
    <div class="border border-3">
        <div class="row m-3">
            <h1>Add new Category</h1>
            <hr />
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="CategoryName" class="m-1"></label>
                <input asp-for="CategoryName" class="form-control m-1" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="file" asp-for="clientFile" onchange="loadFile(event)" />
                <img id="myImg" height="200" />
            </div>
            <hr />
            <div class="mb-3">
                <button type="submit" class="btn btn-primary me-2" style="width:180px; height:50px">Save</button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-secondary me-2" style="width:180px; height:50px;">Back to categories</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var loadFile = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var myImg = document.getElementById('myImg');
                myImg.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}