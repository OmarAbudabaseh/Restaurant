@model Category
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Category</h1>
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border border-3">
        <div class="row m-3">
            <h1>Delete Category</h1>
            <hr />
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="CategoryName" class="m-1"></label>
                <input asp-for="CategoryName" class="form-control m-1" disabled />
            </div>
            <hr />
            <div class="mb-3">
                <button type="submit" class="btn btn-primary me-2" style="width:180px; height:50px">Delete</button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-secondary me-2" style="width:180px; height:50px;">Back to categories</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
